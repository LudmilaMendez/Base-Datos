{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/types/*"]
    }
    },
    "include": ["src/**/*", "src/types/**/*.d.ts"] 
}